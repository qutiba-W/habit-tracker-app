rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Users collection: Users can only read/write their own document
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
      
      // Habits subcollection: Users can only access their own habits
      match /habits/{habitId} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      
      // Courses subcollection: Users can write their own courses
      // Any authenticated user can READ (for friend study comparison)
      match /courses/{courseId} {
        allow write: if isAuthenticated() && isOwner(userId);
        allow read: if isAuthenticated();
        
        // Subjects subcollection under courses
        match /subjects/{subjectId} {
          allow write: if isAuthenticated() && isOwner(userId);
          allow read: if isAuthenticated();
        }
      }
      
      // Study Sessions subcollection
      match /studySessions/{sessionId} {
        allow write: if isAuthenticated() && isOwner(userId);
        allow read: if isAuthenticated();
      }
      
      // Stats subcollection: Users can read/write their own stats
      // Other authenticated users can READ stats (for leaderboard)
      match /stats/{document=**} {
        allow write: if isAuthenticated() && isOwner(userId);
        allow read: if isAuthenticated();
      }
      
      // History subcollection: Users can only access their own history
      match /history/{document=**} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
      
      // Friends subcollection: 
      // - Any authenticated user can CREATE a friend entry (for bidirectional friend acceptance)
      // - Only the owner can UPDATE or DELETE friends
      // - Any authenticated user can READ (for leaderboard)
      match /friends/{friendId} {
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() && isOwner(userId);
        allow read: if isAuthenticated();
      }
      
      // Wellness subcollection: Users can manage their own wellness/mood data
      match /wellness/{document=**} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // Wellness Logs (New Collection)
      match /wellnessLogs/{document=**} {
        allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }
    
    // Friend Requests collection: Global collection for friend requests
    // Users can read requests sent TO their email, and create/update requests they sent
    match /friendRequests/{requestId} {
      // Anyone authenticated can create a friend request
      allow create: if isAuthenticated();
      
      // Users can read requests where they are the recipient (by email)
      allow read: if isAuthenticated() && (
        resource.data.toEmail == request.auth.token.email ||
        resource.data.fromUserId == request.auth.uid
      );
      
      // Recipient can update status (accept/reject)
      allow update: if isAuthenticated() && 
        resource.data.toEmail == request.auth.token.email;
      
      // Sender or recipient can delete
      allow delete: if isAuthenticated() && (
        resource.data.toEmail == request.auth.token.email ||
        resource.data.fromUserId == request.auth.uid
      );
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
